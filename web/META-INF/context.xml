<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/cycybank">
    <Resource
        type="javax.sql.DataSource"
        auth="Container"
        name="jdbc/cycybank"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/cycybank"
        username="root"
        password="root"

        maxActive="10"
        maxIdle="3"
        maxWait="1000"
        validationQuery="SELECT 1 FROM dual"
    />
</Context>